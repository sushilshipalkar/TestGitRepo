<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model=>model.movieid )
     @Html.HiddenFor(model => model.PosterId)
        @Html.HiddenFor(model => model.Poster)
    <fieldset>
       
        <table>
            <tr>
                <td>
                    <table>
                        <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div>
                                    @Html.LabelFor(model => model.MovieName)
                                </div>
                            </td>
                            <td  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.EditorFor(model => model.MovieName)
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.MovieName)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.YearOfRelease)
                                </div>
                            </td>
                            <td  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.TextBoxFor(model => model.YearOfRelease, new { id = "yorEdit" })
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.YearOfRelease)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.Plot)
                                </div>
                            </td>
                            <td  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.EditorFor(model => model.Plot)
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.Plot)
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.ActorName)
                                </div>
                            </td>
                            <td  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div >
                                     @Html.DropDownListFor(model => model.actorid, Model.ActorName, new { style = "width:100px;font-size: 12px;", @id = "ddlActorEdit", @multiple = "multiple" })                                    
                                      <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.actorid)
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.ProducerName)
                                </div>
                            </td>
                            <td  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.DropDownListFor(model => model.Producerid, Model.ProducerName, new { style = "width:130px;", @id = "ddlProducerEdit", @multiple = "single" })
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.Producerid)
                                    </span>
                                </div>
                            </td>
                        </tr>


                        <tr>
                      
                        
                        <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.SelectedPoster)
                                </div>
                            </td>
                    <td  class="FilterRight2" style =" padding-bottom: 1em;">
                    <img src="@Model.Poster" class ="imagesize" />
                    </td>
                        </tr>

                         <tr>
                            <td class="FilterLeft" style =" padding-bottom: 1em;">
                                <div >
                                    @Html.LabelFor(model => model.Poster)
                                </div>
                            </td>
                            <td colspan ="2"  class="FilterRight2" style =" padding-bottom: 1em;">
                                <div  style ="float :right " >
                                   @Html.TextBoxFor(m => m.file, new { type = "file" })
                                    <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.file)
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td  colspan ="2" class="FilterLeft" style =" padding-bottom: 1em;">
                                <div  style ="float :right ">
                                    <input type="submit" value="Save"  class="Button" />                                    
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
           
            <td>
                <img src="../../Images/index11.jpg" />
            </td>
             </tr>
           
          
        </table>
    </fieldset>
}

<script type ="text/javascript"  >

    $(function () {
        $("#yorEdit").datepicker({ dateFormat: "mm/dd/yy" });
    });

    $("#ddlActorEdit").multiselect({
        show: "bounce",
        selectedList:2

    }).multiselectfilter();

    $("#ddlProducerEdit").multiselect({
        show: "bounce",
        multiple: false,
        selectedList: 1
    }).multiselectfilter();


</script>
