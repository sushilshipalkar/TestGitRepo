<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
       
        <table>
            <tr>
                <td>
                    <table>
                        <tr>
                            <td  class="FilterLeft" style =" padding-bottom: 1em;">
                                <div>
                                    @Html.LabelFor(model => model.ActorName)
                                </div>
                            </td>
                            <td class="FilterRight2" style =" padding-bottom: 1em;">
                                <div>
                                    @Html.EditorFor(model => model.ActorName)
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.ActorName)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft"  style =" padding-bottom: 1em;">
                                <div>
                                    @Html.LabelFor(model => model.gender)
                                </div>
                            </td>
                            <td class="FilterRight2" style =" padding-bottom: 1em;">
                                <div>
                                      @Html.DropDownListFor(Model => Model.GenderId, ViewData["Gender"] as SelectList, new { style = "width:100px;font-size: 12px;", @id = "ddlGender", @multiple = "single" })                                    
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.GenderId)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft"  style =" padding-bottom: 1em;">
                                <div>
                                    @Html.LabelFor(model => model.dob)
                                </div>
                            </td>
                            <td class="FilterRight2" style =" padding-bottom: 1em;">
                                <div>
                                    @Html.TextBoxFor(model => model.dob, new { id="dob"})
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.dob)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="FilterLeft"  style =" padding-bottom: 1em;">
                                <div>
                                    @Html.LabelFor(model => model.Bio)
                                </div>
                            </td>
                            <td class="FilterRight2" style =" padding-bottom: 1em;">
                                <div>
                                    @Html.TextAreaFor(model => model.Bio)
                                     <br />
                                      <span style="color:Red ">
                                    @Html.ValidationMessageFor(model => model.Bio)
                                    </span> 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan ="2">
                                <div style ="float :right ">
                                    <input type="submit" value="Save" id="saveActor"  class="Button" />                                    
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                
                    <img src="../../Images/index11.jpg" />
                </td>
            </tr>
        </table>
    </fieldset>
}
<script type="text/javascript"  >

    $(function () {
        $("#dob").datepicker();
    });

    $("#ddlGender").multiselect({
        show: "bounce",
        multiple: false,
        selectedList: 1

    }).multiselectfilter();


    


</script>
